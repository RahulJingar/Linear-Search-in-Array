#include<iostream>
using namespace std;
void linearSearch(int arr[],int size)
{
    for(int i=0;i<size;i++)
    {
        if(arr[i]%2==0)
        {
            cout<<"Find the First Even Number in an Array:"<<i;
            break;
        }
    }
}
int main()
{
    int arr[]={9, 15, 23, 10, 18, 25};
    int size=sizeof(arr)/sizeof(arr[0]);
    linearSearch(arr,size);
    return 0;
}
