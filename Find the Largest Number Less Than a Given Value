#include<iostream>
using namespace std;
void linearSearch(int arr[],int size)
{
    int max=0;
    for(int i=0;i<size;i++)
    {
        if(arr[i]<20 && arr[i]>max)
        {
           max=arr[i];
        }
    }
  cout<<"Find the Largest Number Less Than a Given Value:"<<max;
}
int main()
{
    int arr[]={2, 7, 10, 15, 25};
    int size=sizeof(arr)/sizeof(arr[0]);
    linearSearch(arr,size);
    return 0;
}
