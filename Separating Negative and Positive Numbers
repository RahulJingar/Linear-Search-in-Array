#include<bits/stdc++.h>
using namespace std;
void negativePostiveNumber(int arr[],int size)
{
	int j=0;
	for(int i=0; i<size; i++)
	{
		if(arr[i]<0)
		{
			swap(arr[i],arr[j]);
			j++;
		}
	}
}
int main()
{
	int arr[] = {8,-4,9,-6,5,-2,4,-1};
	int size = sizeof(arr)/sizeof(arr[0]);
	negativePostiveNumber(arr,size);
	for(int i=0; i<size; i++)
	{
		cout<<arr[i]<<" ";
	}
	return 0;
}
